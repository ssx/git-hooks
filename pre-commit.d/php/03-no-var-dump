#!/usr/bin/env bash
# ─────────────────────────────────────────────────────────────────────────────
# Repository : https://github.com/ssx/git-hooks
# Author     : https://github.com/ssx
# License    : Provided as-is with no warranty. Use at your own risk.
# ─────────────────────────────────────────────────────────────────────────────
#
# Check: no var_dump() calls
# Scope: php

tmp="$1"
src="$2"

if matches=$(grep -nE '\bvar_dump[[:space:]]*\(' "$tmp" 2>/dev/null); then
  printf '%s\n' "$matches" | sed "s|^|        $src:|"
  exit 1
fi

exit 0
